= link_to                                      |
  image_tag(                                   |
    Gravatar.new(member.email).image_url(      |
      options = {                              |
        :size => defined?(size) ?  size : 150, |
        :default => :identicon }),             |
    :alt => '',                                |
    :class => 'img img-responsive avatar' ),   |
  member_path(member)
